<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ThemePreviewActivity"
    tools:showIn="@layout/theme_preview_activity">

    <LinearLayout
        android:id="@+id/layout_targets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/preview_targets_padding_start"
        android:paddingEnd="@dimen/preview_targets_padding_end" >

        <LinearLayout
            android:id="@+id/wallpaper_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:text="@string/separator_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sound_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:text="@string/separator_sound" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/others_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:text="@string/separator_others" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:text="@string/separator_app" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_previews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/sub_header"
                android:text="@string/separator_preview" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_preview_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>