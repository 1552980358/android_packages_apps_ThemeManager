<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.exthmui.theme"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />

    <protected-broadcast android:name="org.exthmui.theme.THEME_APPLY_RESULT" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <receiver
            android:name=".broadcasts.ThemeStatusReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="org.exthmui.theme.THEME_APPLY_RESULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.ThemeManageService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.ThemeDataService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ThemePreviewActivity"
            android:launchMode="singleTask"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ThemePickerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/preferences_title"
            android:theme="@style/AppTheme" />
    </application>

</manifest>